@page
@model TinyAmazon.Pages.PurchaseModel
@{
}

<h2>Your Little Book Basket</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>PageCount</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Book.Author</td>
                <td>@i.Book.Publisher</td>
                <td>@i.Book.Isbn</td>
                <td>@i.Book.Classification</td>
                <td>@i.Book.Category</td>
                <td>@i.Book.PageCount</td>
                <td>@i.Book.Price</td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Keep Shopping</a>
</div>