@model Book

<div class="card card-outline-primary m-1 p-1">
    
    <div class="bg-light p-1">
        <h4>@Model.Title</h4>

        <span class="badge bg-info" style="float:right">
            Price: $@Model.Price
        </span>
    </div>

    <ul>
        <li class="text-lg-left">Author: @Model.Author</li>
        <li class="text-lg-left">Publisher: @Model.Publisher</li>
        <li class="text-lg-left">Category: @Model.Category</li>
        <li class="text-lg-left">Classification: @Model.Classification</li>
        <li class="text-lg-left">Page Count: @Model.PageCount</li>
        <li class="text-lg-left">ISBN: @Model.Isbn</li>
    </ul>


</div>
